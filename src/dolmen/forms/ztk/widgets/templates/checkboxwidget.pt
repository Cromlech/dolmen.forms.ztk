<tal:checkbox>
  <input id="#" name="#" class="#" checked="" value="True" type="checkbox"
	 tal:define="checked widget.inputValue() == 'True'"
	 tal:attributes="name widget.identifier;
			 readonly widget.readonly and 'readonly' or None;
			 id widget.htmlId();
			 class widget.htmlClass();
			 checked checked and 'checked' or None" />

  <input value="True" type="hidden"
	 tal:attributes="name widget.identifier + '.present'" />
</tal:checkbox>
